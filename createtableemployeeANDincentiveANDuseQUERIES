/*TABLE EMPLOYEE*/

Create table Employee
(
    employee_id int(100) PRIMARY key AUTO_INCREMENT,
    first_name varchar (100),
    last_name varchar (100),
    salary int(100),
    joining_date varchar(100),
    department varchar(100)
);

